generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Category {
  PROGRAMMING
  AIGC
}

model Submission {
  id             String   @id @default(uuid())
  studentName    String
  grade          Int
  classNumber    Int
  category       Category
  workTitle      String
  fileName       String
  storedFileName String
  fileType       String
  fileSize       Int
  submittedAt    DateTime @default(now())
}
